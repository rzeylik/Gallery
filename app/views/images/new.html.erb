<div class="title">New image</div>

<%= form_for([@category, @image], html: {class: 'new-form'}) do |f| %>
  <div class="input">
    <%= f.label :title, 'Title:', class: 'input__title' %>
    <%= f.text_field :title %>
  </div>
  <div class="file-upload">
    <label><%= f.file_field :image, id: 'file-input' %>Choose file</label>
    <div id="file-description">Image is not choosen</div>
  </div>
  <div class="">
    <%= f.submit 'Save', class: 'btn-save' %>
  </div>
<% end %>

